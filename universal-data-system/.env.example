# Universal Data System - Environment Configuration
# Copy to .env and fill in your values

# ============================================
# Database
# ============================================
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/uds

# ============================================
# Redis (for arq task queue)
# ============================================
REDIS_URL=redis://localhost:6379/0

# ============================================
# Google OAuth (Required)
# Get from: https://console.cloud.google.com/apis/credentials
# ============================================
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/oauth/callback

# ============================================
# Webhooks
# ============================================
# Base URL where your API is accessible (for Google webhooks)
WEBHOOK_BASE_URL=https://your-domain.com
# Secret for validating webhook requests
WEBHOOK_SECRET=generate-a-random-secret-here

# ============================================
# Gemini Embeddings
# Get from: https://aistudio.google.com/app/apikey
# ============================================
GEMINI_API_KEY=your-gemini-api-key

# Embedding configuration (768 dims for MRL optimization)
EMBEDDING_MODEL=models/text-embedding-004
EMBEDDING_DIMENSIONS=768

# ============================================
# API Server
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO

# ============================================
# Worker
# ============================================
WORKER_CONCURRENCY=10

# ============================================
# Chunking
# ============================================
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# ============================================
# Search
# ============================================
SEARCH_TOP_K=20
RRF_K=60
